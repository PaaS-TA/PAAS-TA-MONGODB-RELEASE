  - mongodb
properties:
  mongodb.key:
    description: 'mongodb replication key'
  mongodb.replSetName:
    description: 'Replica Set Name.'
    default: openpaas
  mongodb.bindIp:
    description: 'The IP address that mongos or mongod binds to in order to listen for connections from applications.'
    default: 0.0.0.0
  mongodb.port:
    description: 'mongodb port'
    default: 27017
